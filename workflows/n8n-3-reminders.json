                }
            }
        },
        {
            "parameters": {
                "resource": "sms",
                "operation": "send",
                "from": "+1234567890",
                "to": "={{$json.phone}}",
                "message": "={{$json.sms_message}}"
            },
            "name": "Send SMS (Twilio)",
            "type": "n8n-nodes-base.twilio",
            "typeVersion": 1,
            "position": [
                1000,
